{
  "testMatch": [
    "<rootDir>/__tests__/**/?(*.)(test|spec).ts?(x)"
  ],
  "transform": {
    ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
  },
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "jsx"
  ],
  "moduleNameMapper": {
    "../../src$": "<rootDir>/preact/src",
    "^react$": "preact/compat",
    "^react-dom$": "preact/compat",
    "^react-testing-library$": "preact-testing-library"
  },
  "globals": {
    "ts-jest": {
      "tsConfig": "<rootDir>/tsconfig.preact.json"
    }
  }
}
