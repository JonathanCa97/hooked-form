{
  "name": "hooked-form",
  "version": "1.4.0",
  "description": "Forms done with React-Hooks",
  "author": "jdecroock <decroockjovi@gmail.com> (https://twitter.com/JoviDeC)",
  "private": false,
  "repository": "https://www.github.com/jovidecroock/hooked-form",
  "sideEffects": false,
  "scripts": {
    "build": "rimraf dist && microbundle --name hookedForm --output dist/prod && microbundle --no-compress --name hookedForm --output dist/",
    "filesize": "bundlesize",
    "test": "cross-env NODE_ENV=test jest",
    "test:preact": "cross-env jest --config ./jest.preact.config.json",
    "test:watch": "cross-env npm run test -- --watch",
    "prepublishOnly": "npm run test && npm run build && npm run filesize"
  },
  "keywords": [
    "react",
    "forms",
    "react-hooks",
    "low-bundlesize",
    "formmanagement",
    "hooks",
    "validation"
  ],
  "main": "dist/hooked-form.js",
  "browser": "dist/hooked-form.umd.js",
  "umd:main": "dist/hooked-form.umd.js",
  "jsnext:main": "dist/hooked-form.module.js",
  "module": "dist/hooked-form.module.js",
  "source": "src/index.ts",
  "types": "dist/index.d.ts",
  "typings": "dist/index.d.ts",
  "license": "MIT",
  "resolutions": {
    "@types/react": "16.8.2"
  },
  "devDependencies": {
    "@types/jest": "23.3.13",
    "@types/react": "16.8.2",
    "@types/react-dom": "16.8.0",
    "bundlesize": "0.17.1",
    "codecov": "3.1.0",
    "cross-env": "5.2.0",
    "jest": "23.6.0",
    "jest-cli": "23.6.0",
    "microbundle": "0.9.0",
    "preact": "8.4.2",
    "preact-compat": "3.18.4",
    "preact-testing-library": "^0.3.0",
    "react": "16.8.2",
    "react-dom": "16.8.2",
    "react-testing-library": "5.9.0",
    "rimraf": "2.6.3",
    "ts-jest": "23.10.5",
    "tslib": "1.9.3",
    "tslint": "5.12.1",
    "tslint-config-prettier": "1.18.0",
    "tslint-react": "3.6.0",
    "typescript": "3.3.1"
  },
  "dependencies": {},
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "mangle": {
    "regex": "^_"
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "testMatch": [
      "<rootDir>/__tests__/**/?(*.)(test|spec).ts?(x)"
    ],
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ]
  },
  "bundlesize": [
    {
      "path": "./dist/prod/hooked-form.module.js",
      "maxSize": "2.5 kB"
    },
    {
      "path": "./dist/prod/hooked-form.umd.js",
      "maxSize": "2.5 kB"
    },
    {
      "path": "./dist/prod/hooked-form.js",
      "maxSize": "2.5 kB"
    }
  ]
}
